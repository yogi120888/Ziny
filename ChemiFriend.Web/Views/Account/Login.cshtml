@model ChemiFriend.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutMaruti.cshtml";
}

<style type="text/css">
    #loginbox .controls {
        padding: 3px 20px;
    }
</style>

<div id="loginbox">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        <div id="loginform" class="form-vertical">
            <div class="control-group normal_text">
                <h3> Login </h3>
                <div style="float:left;margin-top:-20px;padding:10px;">
                    <a style="color:#fff;" href="@Url.Action("CreateUser", "Account")">Create Account</a>
                </div>
                <div style="float:right;margin-top:-20px;padding:10px;">
                    <a style="color:#fff;" href="@Url.Action("Index", "Account")">Go back to Home</a>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on"><i class="icon-user"></i></span>
                        @*<input type="text" placeholder="Username" />*@
                        @Html.TextBoxFor(m => m.Username, new { @placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.Username)
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on"><i class="icon-lock"></i></span>
                        @*<input type="password" placeholder="Password" />*@
                        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
            </div>
            <span class="field-validation-error" style="padding-left:10px;"> @ViewBag.Message</span>
            <div class="form-actions">
                <span class="pull-left"><a href="#" class="flip-link btn btn-inverse" id="to-recover">Forgot Password?</a></span>
                <span class="pull-right"><input type="submit" class="btn btn-success" value="Login" /></span>
            </div>
        </div>
    }
    @using (Html.BeginForm("ResetPassword", "Account"))
    {
        <div id="recoverform" action="#" class="form-vertical" style="display:none;">
            <p class="normal_text">Enter your e-mail address below and we will send you instructions how to recover a password.</p>
            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on"><i class="icon-envelope"></i></span><input type="text" name="Email" id="Email" placeholder="E-mail address" />
                </div>
            </div>
            <div class="form-actions">
                <span class="pull-left"><a href="#" class="flip-link btn btn-inverse" id="to-login">&laquo; Back to login</a></span>
                <span class="pull-right"><input type="submit" class="btn btn-info" value="Recover" /></span>
            </div>
        </div>
    }
</div>