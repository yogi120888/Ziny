@model ChemiFriend.Entity.JsonModel.SearchSubCategoryModel
@using System.Configuration;
@{
    string BaseUrl = ConfigurationManager.AppSettings["APIBaseUrl"].ToString();
}

<div class="agile_top_brands_grids">
    @if (Model.getSubCategoryModel.Count > 0)
    {
        foreach (var item in Model.getSubCategoryModel)
        {
            <div class="col-md-3 top_brand_left">
                <div class="hover14 column">
                    <div class="agile_top_brand_left_grid">
                        <div class="agile_top_brand_left_grid1">
                            <figure>
                                <div class="snipcart-item block">
                                    <div class="snipcart-thumb">
                                        @if (string.IsNullOrEmpty(item.ProductSubCategoryImagePath))
                                        {
                                            <a href="javascript:void(0)" target="_blank"><img src="~/Images/DummyPic.jpg" height="220" width="250" /></a>
                                        }
                                        else
                                        {
                                            string imgPath = BaseUrl + "Images/UploadImg/" + item.ProductSubCategoryImagePath;
                                            <a href="javascript:void(0)" target="_blank"><img src="@imgPath" height="220" width="250"></a>
                                        }
                                        <p>@item.ProductCategory</p>
                                        <p>@item.ProductSubCategoryName</p>
                                    </div>
                                </div>
                            </figure>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="clearfix"> </div>
    }
    else
    {
        <div><text>There is no Product</text></div>
    }
</div>
<nav class="numbering">
    <ul class="pagination paging" id="paging">
        @*<li>
                <a href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="active"><a href="#">1<span class="sr-only">(current)</span></a></li>*@
        @if (Model.getSubCategoryModel.Count > 0)
        {
            for (int i = 1; i <= Model.TotalPageCount; i++)
            {
                if (Model.PageIndex == i)
                {
                    <li class="active"><a onclick="IsActive(this)" href="javascript:void(0)">@i</a></li>
                }
                else
                {
                    <li><a onclick="IsActive(this)" href="javascript:void(0)">@i</a></li>

                }
            }
        }
        @*<li>
                <a href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>*@
    </ul>
</nav>
