@model ChemiFriend.Web.Models.InputModel.ProductCodeModel

@{
    ViewBag.Title = "CreateProductCode";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CreateProductCode", "Master", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    <div id="content">
        <div id="content-header">
            <div class="btnOnTop"><button type="submit" class="btn btn-success">Save</button>&nbsp;<a href="@Url.Action("GetProductCodeList", "Master", new { area = "Admin" })" class="btn btn-info">Molecules List</a></div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-align-justify"></i> </span>
                            <h5>Add Molecules</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <div class="control-group">
                                <label class="control-label">Molecules:</label>
                                <div class="controls">
                                    @Html.TextAreaFor(x => x.ProductCodes, new { @class = "span11" })
                                    <span class="YError">@Html.ValidationMessageFor(x => x.ProductCodes)</span>
                                </div>
                            </div>
                            <div class="control-group">
                                &nbsp;
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section scripts
{
    @*=== jQeury Gritter, a growl-like notifications ===*@

    @if (!string.IsNullOrEmpty(ViewBag.Success))
    {
        <script type="text/javascript">
            $(document).ready(function () {
                var msg = '@ViewBag.Success';
                GritterNoteSuccess(msg);
            });
        </script>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <script type="text/javascript">
            $(document).ready(function () {
                var msg = '@ViewBag.Error';
                GritterNoteError(msg);
            });
        </script>
    }
}
