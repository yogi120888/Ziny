@model ChemiFriend.Entity.CorporateRegistration
@{
    ViewBag.Title = "CorporateMemberList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string APIURL = Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["APIURL"]);

    int UserId = ChemiFriend.Models.UserAuthenticate.UserId;
    int Role = ChemiFriend.Models.UserAuthenticate.Role;
}

<div id="content">
    <div id="content-header">
        
        <div style="float:right;margin-right:100px;margin-top: 5px;"><a href="@Url.Action("CorporateRegistration", "Master", new { area="Admin"})" class="btn btn-info" style="text-align:right;">Add New</a></div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h5>CORPORATE REGISTRATION LIST</h5>
                <div>
                    <table id="myGrid" class="table">
                        <thead>
                            <tr>
                                <th class="dt-left">SNo.</th>
                                <th>Contact Person</th>
                                <th>Mobile No.</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Country</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myGrid').DataTable({
                "ajax": {
                    "url": "@APIURL/ApiMaster/GetCorporateMemberList?UserId=@UserId&Role=@Role&RegType=2",
                    "headers": { 'Token': token },
                    "dataSrc": "result"
                },
                "columns": [
                    {
                        "data": null, "sortable": false,
                        render: function (data, type, row, meta) {
                            debugger;
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "FullName", className: "dt-left" },
                    { "data": "MobileNo", className: 'dt-center' },
                    { "data": "Email", className: 'dt-center' },
                    { "data": "Address1", className: 'dt-center' },
                    { "data": "CountryName", className: 'dt-center' },
                    {
                        "data": null, className: 'dt-center',
                        render: function (data, type, row, meta) {
                            if (row.Status)
                                return '<input type="checkbox" id="chk-' + row.CorporateId + '" data-key="' + row.CorporateId + '" checked="' + row.Status + '" onclick="ChangeActiveDeactive(this);" />'
                            else
                                return '<input type="checkbox" id="chk-' + row.CorporateId + '" data-key="' + row.CorporateId + '" unchecked="' + row.Status + '" onclick="ChangeActiveDeactive(this);" />'
                        }
                    },
                    {
                        "data": null, className: 'dt-center',
                        render: function (data, type, row, meta) {
                            return '<div class="btn-group">'
                                +'<button data-toggle="dropdown" class="btn btn-info dropdown-toggle">Action <span class="caret"></span></button>'
                                +'<ul class="dropdown-menu">'
                                + '<li><a href="/Master/EditRegistration/' + row.CorporateId + '"">Edit</a></li>'
                                + '<li><a onclick="IsDelete(this);" id="' + row.CorporateId+'">Delete</a></li>'
                                +'</ul></div>';
                        }
                    }
                ]
            });
        });
        //  Delete confirmation PopUp
        function IsDelete(elm)
        {
            var TranId = $(elm).attr("id");
            var con = confirm("Are you sure you want to delete this ?");
            if (con) {

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("DeleteRegistration", "Master", new { area="Admin"})",
                    data: '{CorporateId: "' + TranId + '" }',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (resp) {
                        if (resp.RespType == 'success') {
                            window.location.href = window.location.href;
                        }
                    },
                    error: function (resp) {
                        alert(resp.RespMessage);
                    }
                });
            }
        }
        // Active Deactive employee
        function ChangeActiveDeactive(elm) {
            var nid = $(elm).data("key");
            var status;
            var con = false;
            if ($(elm).is(":checked")) {
                status = true;
            }
            else {
                status = false;
            }
            if (status) {
                con = confirm("Are you sure you want to Activate this ?");
            }
            else {
                con = confirm("Are you sure you want to Deactivate this ?");
            }
            if (con) {
                $.ajax({
                    type: "POST",
                    url: "/Admin/Master/ChangeActiveDeactive",
                    data: "{id:" + nid + ", status: '" + status + "'}",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (msg) {
                        GritterActiveDeactive(msg);
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        alert(textStatus + errorThrown);
                    }
                });
            }
        }

    </script>
}

